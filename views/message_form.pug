extends layout 

block content 
    h1= title 

    form(method='POST', action='')
        .form-group 
            label(for='messagetext') Text: 
            textarea#text.form-control(name="messagetext", cols="30", rows="10", required='true', value=(undefined=== message ? '' : message.text)) 
        button.btn.btn-primary(type="submit") Submit

    if errors 
        ul 
            for error in errors 
                li!= error.msg