extends layout 

block content 
    h1= title 

    form(method='POST', action='')
        .form-group 
            label(for='text') Text: 
            textarea#text.form-control(name="text", cols="30", rows="10", name='text', required='true', value=(undefined=== message ? '' : message.text)) 

    if errors 
        ul 
            for error in errors 
                li!= error.msg